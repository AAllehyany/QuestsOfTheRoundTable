package group52.comp3004.GUI;

import javafx.fxml.FXMLLoader;
import javafx.scene.layout.Pane;

public class PlayerArea {
	private Pane area;
	
	//Constructor
	public PlayerArea(Pane parent) throws Exception{
		FXMLLoader loader = new FXMLLoader(getClass().getResource("/fxml/player_area.fxml"));
		area = loader.load();
		
		//Add the subfields
		parent.getChildren().add(area);
		FieldArea field = new FieldArea(area);
		HandArea hand = new HandArea(area);
		PortraitArea portrait = new PortraitArea(area);
		
		
		System.out.println("Player area created");
	}
	
	public Pane getPane() { return area; }
}
